<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/first_use">

    <ImageButton
        android:src="@drawable/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebutton_login"
        android:background="@null"/>

    <ImageButton
        android:src="@drawable/button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebutton_signup"
        android:background="@null" />

    <ImageButton
        android:src="@drawable/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebutton_skip"
        android:background="@null"/>

</LinearLayout>